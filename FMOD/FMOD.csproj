<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AssemblyName>FMOD_Library</AssemblyName>
    <RootNamespace>FMOD</RootNamespace>
    <Platforms>x64;x86</Platforms>
    <Configurations>Debug;Release;Virtual</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Debug|x64'">
    <OutputPath>..\Bins\FMOD\$(Configuration)\$(Platform)\</OutputPath>
    <DefineConstants>TRACE;DEBUG;WIN64</DefineConstants>
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <CodeAnalysisRuleSet>MinimumRecommendedRules.ruleset</CodeAnalysisRuleSet>
    <BaseIntermediateOutputPath>..\Bins\obj\</BaseIntermediateOutputPath>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Release|x64'">
    <OutputPath>..\Bins\FMOD\$(Configuration)\$(Platform)\</OutputPath>
    <DefineConstants>TRACE;WIN64</DefineConstants>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <CodeAnalysisRuleSet>MinimumRecommendedRules.ruleset</CodeAnalysisRuleSet>
    <BaseIntermediateOutputPath>..\Bins\obj\</BaseIntermediateOutputPath>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Virtual|x64' ">
    <OutputPath>..\Bins\FMOD\$(Configuration)\$(Platform)\</OutputPath>
    <DefineConstants>TRACE;DEBUG;WIN64;VIRTUAL</DefineConstants>
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <CodeAnalysisRuleSet>MinimumRecommendedRules.ruleset</CodeAnalysisRuleSet>
    <BaseIntermediateOutputPath>..\Bins\obj\</BaseIntermediateOutputPath>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Debug|x86'">
    <OutputPath>..\Bins\FMOD\$(Configuration)\$(Platform)\</OutputPath>
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <CodeAnalysisRuleSet>MinimumRecommendedRules.ruleset</CodeAnalysisRuleSet>
    <BaseIntermediateOutputPath>..\Bins\obj\</BaseIntermediateOutputPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Release|x86'">
    <OutputPath>..\Bins\FMOD\$(Configuration)\$(Platform)\</OutputPath>
    <BaseIntermediateOutputPath>..\Bins\obj\</BaseIntermediateOutputPath>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <CodeAnalysisRuleSet>MinimumRecommendedRules.ruleset</CodeAnalysisRuleSet>
    <BaseIntermediateOutputPath>..\Bins\obj\</BaseIntermediateOutputPath>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Virtual|x86' ">
    <DebugSymbols>true</DebugSymbols>
    <OutputPath>..\Bins\FMOD\$(Configuration)\$(Platform)\</OutputPath>
    <DefineConstants>TRACE;DEBUG;VIRTUAL</DefineConstants>
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <CodeAnalysisRuleSet>MinimumRecommendedRules.ruleset</CodeAnalysisRuleSet>
    <BaseIntermediateOutputPath>..\Bins\obj\</BaseIntermediateOutputPath>
  </PropertyGroup>

  <ItemGroup Condition=" '$(Platform)' == 'x86' ">
    <ContentWithTargetPath Include="Libraries\x86\fmod_x86.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>fmod.dll</TargetPath>
    </ContentWithTargetPath>
  </ItemGroup>
  <ItemGroup Condition=" '$(Platform)' == 'x64' ">
    <ContentWithTargetPath Include="Libraries\x64\fmod_x64.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>fmod.dll</TargetPath>
    </ContentWithTargetPath>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="obj\**" />
    <EmbeddedResource Remove="obj\**" />
    <None Remove="obj\**" />
  </ItemGroup>
  
</Project>
