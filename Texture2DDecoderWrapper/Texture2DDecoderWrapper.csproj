<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>..\Bins\Texture2DDecoderWrapper\$(Configuration)\</OutputPath>
    <Platforms>x64</Platforms>
    <Configurations>Debug;Release;Virtual</Configurations>
    <DebugType>embedded</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

	<ItemGroup Condition="'$(Configuration)' == 'Debug'">
		<ContentWithTargetPath Include="..\Texture2DDecoderNative\bin\x64\Debug\Texture2DDecoderNative.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<TargetPath>Texture2DDecoderNative.dll</TargetPath>
		</ContentWithTargetPath>
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)' == 'Release'">
		<ContentWithTargetPath Include="..\Texture2DDecoderNative\bin\x64\Release\Texture2DDecoderNative.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<TargetPath>Texture2DDecoderNative.dll</TargetPath>
		</ContentWithTargetPath>
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)' == 'Virtual'">
		<ContentWithTargetPath Include="..\Texture2DDecoderNative\bin\x64\Debug\Texture2DDecoderNative.dll">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<TargetPath>Texture2DDecoderNative.dll</TargetPath>
		</ContentWithTargetPath>
	</ItemGroup>

</Project>
